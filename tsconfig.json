{
  "compilerOptions": {
    "module": "commonjs",
    "allowJs": true,
    "lib": ["ES6", "DOM"],
    "declaration": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2017",
    "sourceMap": true,
    "outDir": "./dist",
    "declarationDir": "./dist/types",
    "baseUrl": "./src",
    "typeRoots": ["./types", "node_modules/@types"],
    "incremental": true,
    "paths": {
      "@types.*": ["./types/*"],
      "@shared/*": ["./shared/*"],
      "@servers/*": ["./servers/*"],
      "@controllers/*": ["./controllers/*"],
      "@dtos/*": ["./dtos/*"],
      "@enums/*": ["./enums/*"],
      "@exceptions/*": ["./exceptions/*"],
      "@interfaces/*": ["./interfaces/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@models/*": ["./models/*"],
      "@providers/*": ["./providers/*"],
      "@queues/*": ["./queues/*"],
      "@responses/*": ["./responses/*"],
      "@repositories/*": ["./repositories/*"],
      "@selects/*": ["./selects/*"],
      "@secrets/*": ["./secrets/*"],
      "@services/*": ["./services/*"],
      "@test/*": ["./test/*"],
      "@utils/*": ["./utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
